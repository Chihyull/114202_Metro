<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/some_id"
    android:clipToOutline="true">

    <!-- body_head -->
    <TextView
        android:id="@+id/metro_route"
        android:layout_width="172dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:text="@string/metro_route"
        android:textAppearance="@style/metro_route"
        android:gravity="top"/>

    <TextView
        android:id="@+id/change_orde"
        android:layout_width="109dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="249dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:text="@string/change_orde"
        android:textAppearance="@style/change_orde"
        android:gravity="top"/>

    <RelativeLayout
        android:id="@+id/outline_int"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="358dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:background="@drawable/Sort"
        />

    <!-- body_main -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 按鈕 1 -->
        <RelativeLayout
            android:id="@+id/button_1"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_marginTop="183dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#ECD5C1"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/brown_8"/>

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_1"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Wenhu Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

        <!-- 按鈕 2 -->
        <RelativeLayout
            android:id="@+id/button_2"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_below="@id/button_1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#FAD2E1"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/strawberry_3"/>

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_2"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Tamsui-Xinyi Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

        <!-- 按鈕 3 -->
        <RelativeLayout
            android:id="@+id/button_3"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_below="@id/button_2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#CEF4BB"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/dumpling_4"/>

            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_3"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Songshan-Xindian Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

        <!-- 按鈕 4 -->
        <RelativeLayout
            android:id="@+id/button_4"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_below="@id/button_3"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#FEDEC0"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/orange_4"/>

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_4"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Zhonghe-Xinlu Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

        <!-- 按鈕 5 -->
        <RelativeLayout
            android:id="@+id/button_5"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_below="@id/button_4"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#BEE1E6"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/blueberry_3"/>

            <TextView
                android:id="@+id/text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_5"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Bannan Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

        <!-- 按鈕 6 -->
        <RelativeLayout
            android:id="@+id/button_6"
            android:layout_width="317dp"
            android:layout_height="84dp"
            android:layout_below="@id/button_5"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:backgroundTint="#FFF1BA"> <!-- 設定顏色 -->

            <ImageView
                android:id="@+id/icon_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/yellow_2"/>

            <TextView
                android:id="@+id/text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_6"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="Circular Line"
                android:textAppearance="@style/line_styles"/>
        </RelativeLayout>

    </RelativeLayout>

    <!-- foot_main -->

    <View
        android:id="@+id/foot_id"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="856dp"
        android:background="@drawable/foot_id"
        />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/foot2_id"
        android:layout_width="330.92dp"
        android:layout_height="24.64dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="873dp">

        <!-- 最左邊的圖案 -->
        <View
            android:id="@+id/vector1"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/Vector_1" />

        <!-- 第二個圖案 -->
        <View
            android:id="@+id/group1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/vector1"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"
            android:background="@drawable/Group_1" />

        <!-- 第三個圖案 -->
        <View
            android:id="@+id/group2"
            android:layout_width="16dp"
            android:layout_height="24.64dp"
            android:layout_toRightOf="@id/group1"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"
            android:background="@drawable/Group_2" />

        <!-- 第四個圖案 -->
        <View
            android:id="@+id/vector2"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:layout_toRightOf="@id/group2"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"
            android:background="@drawable/Vector_2" />

        <!-- 最右邊的圖案 -->
        <View
            android:id="@+id/vector3"
            android:layout_width="21.92dp"
            android:layout_height="21.92dp"
            android:layout_toRightOf="@id/vector2"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"
            android:background="@drawable/Vector_3" />

    </RelativeLayout>
</RelativeLayout>
