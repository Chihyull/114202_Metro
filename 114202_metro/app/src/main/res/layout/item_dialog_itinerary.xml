<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_choose_source"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub"
        android:padding="16dp">

        <!-- 標題 -->
        <TextView
            android:id="@+id/tv_title_choose_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add itinerary items"
            android:textAppearance="@style/ContentExtraBold"
            android:textColor="@color/main"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 選項：從站點中的地點選擇 -->
        <LinearLayout
            android:id="@+id/row_from_station"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_choose_source"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_place_main"
                android:contentDescription="From station places" />

            <TextView
                android:id="@+id/tv_from_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Choose Place"
                android:textAppearance="@style/ContentExtraBold"
                android:textColor="@color/main"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 細分線 -->
        <View
            android:id="@+id/divider_row"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/main"
            android:alpha="0.25"
            app:layout_constraintTop_toBottomOf="@id/row_from_station"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 選項：從我的最愛選擇 -->
        <LinearLayout
            android:id="@+id/row_from_favorites"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/divider_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_like_main"
                android:contentDescription="From favorites" />

            <TextView
                android:id="@+id/tv_from_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Choose Favorite"
                android:textAppearance="@style/ContentExtraBold"
                android:textColor="@color/main"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 分隔線（內容區與按鈕區） -->
        <View
            android:id="@+id/divider_buttons"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/main"
            app:layout_constraintTop_toBottomOf="@id/row_from_favorites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 底部按鈕：Cancel / Select -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_dialog"
                android:text="Cancel"
                android:textAppearance="@style/ContentExtraBold"
                android:textColor="@color/sub"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_dialog"
                android:text="Select"
                android:textAppearance="@style/ContentExtraBold"
                android:textColor="@color/sub"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
