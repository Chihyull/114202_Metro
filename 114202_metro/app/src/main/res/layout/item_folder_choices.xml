<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_choice_row"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/custom_like_file">

    <!-- 資料夾圖示（沿用你的樣式資源） -->
    <ImageView
        android:id="@+id/img_folder_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_like_main"
        android:contentDescription="Folder" />

    <!-- 名稱 -->
    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Folder name"
        android:textAppearance="@style/ContentNotBold"
        android:textColor="@color/main"
        android:textSize="16sp" />

    <!-- 單選點選 -->
    <RadioButton
        android:id="@+id/radio_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>
