<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Station.PathStation">

    <!-- Start Station (Title) -->
    <TextView
        android:id="@+id/tv_start_station"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        android:text="Start Station"
        android:textAppearance="@style/Title"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- End Station (Title) -->
    <TextView
        android:id="@+id/tv_end_station"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:text="End Station"
        android:textAppearance="@style/Title"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_start_station"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/tv_end_station"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shortest Path Section Title -->
    <TextView
        android:id="@+id/tv_shortest_path_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:text="Path:"
        android:textAppearance="@style/Title"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shortest Path Content -->
    <TextView
        android:id="@+id/tv_shortest_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:text="XX"
        android:textAppearance="@style/ContentNotBold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_shortest_path_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider_mid"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/tv_shortest_path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Prices + Distance Container -->
    <LinearLayout
        android:id="@+id/layout_price_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Full Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/label_full_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FullPrice："
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_full_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— $"
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Elder Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/label_elder_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ElderPrice："
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_elder_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— $"
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Taipei Child Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/label_taipei_child_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TaipeiChildPrice："
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_taipei_child_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— $"
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Total Distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/label_total_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance："
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— km"
                android:textAppearance="@style/ContentNotBold"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
