<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_folder_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_like_file"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="80dp"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="12dp"
    android:paddingEnd="15dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/img_folder_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Folder Icon"
        android:src="@drawable/icon_like_click" />

    <TextView
        android:id="@+id/text_folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="My Favorite"
        android:textAppearance="@style/ContentExtraBold"
        android:textColor="@color/sub"
        android:textSize="20sp" />
</LinearLayout>
