<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- text -->
    <style name="Title">
        <item name="android:textColor">@color/sub</item>
        <item name="android:fontFamily">@font/racingsansone</item>
    </style>

    <style name="Content">
        <item name="android:textColor">@color/sub</item>
        <item name="android:fontFamily">@font/nunito_black</item>
    </style>

    <style name="ContentExtraBold">
        <item name="android:textColor">@color/sub</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="ContentNotBold">
        <item name="android:textColor">@color/sub</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <!-- corner -->
    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- 可依需求調整圓角大小 -->
    </style>

    <!-- 在你的res/values/styles.xml中添加這個樣式 -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


</resources>